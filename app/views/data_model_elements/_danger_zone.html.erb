<div class="flex ml-auto max-w-4xl pt-4 hidden" data-data-model-form-target="dangerZone">
  <div class="w-32 flex-none mt-5">
    <h2 class="text-base/7 font-semibold text-zinc-950 dark:text-white">Danger Zone</h2>
  </div>
  <div class="w-64 flex-1">
    <div class="flex flex-col border border-rose-500 rounded-lg">
      <div class="flex flex-row items-start border-b border-gray-900 p-4">
        <div class="flex-col w-1/3">
          <%= custom_label_tag 'Delete this element' %>
        </div>
        <div class="w-2/3">
          <p class="text-sm/6 text-gray-600 dark:text-gray-400">This action cannot be undone. This will permanently delete the element and all associated data.</p>
          <div class="flex justify-end mt-4">
            <%= 
              link_to(
                'Delete',
                destroy_path,        
                data: {
                  turbo_method: :delete,
                  controller: "confirmation",
                  action: 'click->confirmation#confirm',
                  confirmation_message_value: 'Are you sure you want to delete this element?'
                },
                class: TailwindClasses::DANGER_ZONE_BUTTON_CLASS
              ) 
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
