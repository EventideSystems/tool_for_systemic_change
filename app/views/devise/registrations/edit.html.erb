<%= render layout: "layouts/devise_page", locals: { title: "Edit #{resource_name.to_s.humanize}" } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-6' }, data: { turbo: false }) do |f| %>

    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-teal-500 focus:outline-none focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password, required: false, prompt: "Leave blank if you don't want to change it", class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-teal-500 focus:outline-none focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, required: false, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-teal-500 focus:outline-none focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :current_password, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, required: true, prompt: "Current password required to confirm changes", class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-teal-500 focus:outline-none focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.submit "Update", class: "flex w-full justify-center rounded-md border border-transparent bg-teal-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
    </div>
  <% end %>
<% end %>
